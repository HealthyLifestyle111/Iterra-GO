<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-5 fw-bold">Manage Users</h1>
    <a href="/admin/users/add" class="btn btn-primary">
      <i class="bi bi-plus-circle me-2"></i>Add User
    </a>
  </div>
  
  <div class="card shadow-sm">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Username</th>
              <th>Name</th>
              <th>Email</th>
              <th>Member #</th>
              <th>Role</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(user => { %>
              <tr>
                <td><%= user.username %></td>
                <td><%= user.firstName %> <%= user.lastName %></td>
                <td><%= user.email %></td>
                <td><%= user.memberNumber || 'N/A' %></td>
                <td>
                  <span class="badge bg-<%= user.role === 'admin' ? 'danger' : 'primary' %>">
                    <%= user.role %>
                  </span>
                </td>
                <td>
                  <span class="badge bg-<%= user.active ? 'success' : 'secondary' %>">
                    <%= user.active ? 'Active' : 'Inactive' %>
                  </span>
                </td>
                <td>
                  <a href="/admin/users/edit/<%= user.id %>" class="btn btn-sm btn-outline-primary">
                    <i class="bi bi-pencil"></i> Edit
                  </a>
                  <form action="/admin/users/delete/<%= user.id %>" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this user?');">
                    <button type="submit" class="btn btn-sm btn-outline-danger">
                      <i class="bi bi-trash"></i> Delete
                    </button>
                  </form>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  
  <div class="mt-3">
    <a href="/admin" class="btn btn-secondary">Back to Dashboard</a>
  </div>
</div>
