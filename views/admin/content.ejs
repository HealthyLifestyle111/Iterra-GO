<div class="container my-5">
  <h1 class="display-5 fw-bold mb-4">Manage Content</h1>
  
  <div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white">
      <h2 class="h5 mb-0">Home Page Content</h2>
    </div>
    <div class="card-body">
      <form action="/admin/content/homePage" method="POST">
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input type="text" class="form-control" id="title" name="title" value="<%= content.homePage.title %>" required>
        </div>
        
        <div class="mb-3">
          <label for="subtitle" class="form-label">Subtitle</label>
          <input type="text" class="form-control" id="subtitle" name="subtitle" value="<%= content.homePage.subtitle %>" required>
        </div>
        
        <div class="mb-3">
          <label for="heroText" class="form-label">Hero Text</label>
          <textarea class="form-control" id="heroText" name="heroText" rows="3" required><%= content.homePage.heroText %></textarea>
        </div>
        
        <div class="mb-3">
          <label for="features" class="form-label">Features (JSON format)</label>
          <textarea class="form-control" id="features" name="features" rows="10" required><%= JSON.stringify(content.homePage.features, null, 2) %></textarea>
          <small class="form-text text-muted">Edit the features in JSON format. Each feature should have: title, description, and icon</small>
        </div>
        
        <button type="submit" class="btn btn-primary">Update Home Page</button>
      </form>
    </div>
  </div>
  
  <div class="card shadow-sm mb-4">
    <div class="card-header bg-success text-white">
      <h2 class="h5 mb-0">About Page Content</h2>
    </div>
    <div class="card-body">
      <form action="/admin/content/aboutPage" method="POST">
        <div class="mb-3">
          <label for="aboutTitle" class="form-label">Title</label>
          <input type="text" class="form-control" id="aboutTitle" name="title" value="<%= content.aboutPage.title %>" required>
        </div>
        
        <div class="mb-3">
          <label for="aboutContent" class="form-label">Content</label>
          <textarea class="form-control" id="aboutContent" name="content" rows="5" required><%= content.aboutPage.content %></textarea>
        </div>
        
        <button type="submit" class="btn btn-success">Update About Page</button>
      </form>
    </div>
  </div>
  
  <div class="mt-3">
    <a href="/admin" class="btn btn-secondary">Back to Dashboard</a>
  </div>
</div>
