<div class="container my-5">
  <h1 class="display-5 fw-bold mb-4">Admin Dashboard</h1>
  
  <div class="row g-4 mb-4">
    <div class="col-md-4">
      <div class="card text-center h-100 shadow-sm border-primary">
        <div class="card-body">
          <i class="bi bi-people display-4 text-primary mb-3"></i>
          <h3 class="h5">Total Users</h3>
          <p class="display-6 fw-bold mb-3"><%= users.length %></p>
          <a href="/admin/users" class="btn btn-primary">Manage Users</a>
        </div>
      </div>
    </div>
    
    <div class="col-md-4">
      <div class="card text-center h-100 shadow-sm border-success">
        <div class="card-body">
          <i class="bi bi-file-text display-4 text-success mb-3"></i>
          <h3 class="h5">Content Management</h3>
          <p class="text-muted mb-3">Update site content</p>
          <a href="/admin/content" class="btn btn-success">Manage Content</a>
        </div>
      </div>
    </div>
    
    <div class="col-md-4">
      <div class="card text-center h-100 shadow-sm border-info">
        <div class="card-body">
          <i class="bi bi-check-circle display-4 text-info mb-3"></i>
          <h3 class="h5">Active Associates</h3>
          <p class="display-6 fw-bold mb-3"><%= users.filter(u => u.active && u.role === 'associate').length %></p>
          <a href="/admin/users" class="btn btn-info">View All</a>
        </div>
      </div>
    </div>
  </div>
  
  <div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
      <h2 class="h5 mb-0">Recent Users</h2>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Username</th>
              <th>Name</th>
              <th>Email</th>
              <th>Role</th>
              <th>Status</th>
              <th>Created</th>
            </tr>
          </thead>
          <tbody>
            <% users.slice(-10).reverse().forEach(user => { %>
              <tr>
                <td><%= user.username %></td>
                <td><%= user.firstName %> <%= user.lastName %></td>
                <td><%= user.email %></td>
                <td>
                  <span class="badge bg-<%= user.role === 'admin' ? 'danger' : 'primary' %>">
                    <%= user.role %>
                  </span>
                </td>
                <td>
                  <span class="badge bg-<%= user.active ? 'success' : 'secondary' %>">
                    <%= user.active ? 'Active' : 'Inactive' %>
                  </span>
                </td>
                <td><%= new Date(user.createdAt).toLocaleDateString() %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
