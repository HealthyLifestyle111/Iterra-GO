<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <h1 class="h3 mb-4">Edit User</h1>
      
      <div class="card shadow">
        <div class="card-body p-4">
          <form action="/admin/users/edit/<%= editUser.id %>" method="POST">
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="firstName" class="form-label">First Name</label>
                <input type="text" class="form-control" id="firstName" name="firstName" value="<%= editUser.firstName %>">
              </div>
              
              <div class="col-md-6 mb-3">
                <label for="lastName" class="form-label">Last Name</label>
                <input type="text" class="form-control" id="lastName" name="lastName" value="<%= editUser.lastName %>">
              </div>
            </div>
            
            <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <input type="text" class="form-control" id="username" name="username" value="<%= editUser.username %>" disabled>
              <small class="form-text text-muted">Username cannot be changed</small>
            </div>
            
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control" id="email" name="email" value="<%= editUser.email %>" required>
            </div>
            
            <div class="mb-3">
              <label for="password" class="form-label">New Password</label>
              <input type="password" class="form-control" id="password" name="password">
              <small class="form-text text-muted">Leave blank to keep current password</small>
            </div>
            
            <div class="mb-3">
              <label for="memberNumber" class="form-label">doTERRA Member Number</label>
              <input type="text" class="form-control" id="memberNumber" name="memberNumber" value="<%= editUser.memberNumber %>">
            </div>
            
            <div class="mb-3">
              <label for="doterraSiteUrl" class="form-label">doTERRA Site URL</label>
              <input type="url" class="form-control" id="doterraSiteUrl" name="doterraSiteUrl" value="<%= editUser.doterraSiteUrl %>">
            </div>
            
            <div class="mb-3">
              <label for="role" class="form-label">Role</label>
              <select class="form-select" id="role" name="role" required>
                <option value="associate" <%= editUser.role === 'associate' ? 'selected' : '' %>>Associate</option>
                <option value="admin" <%= editUser.role === 'admin' ? 'selected' : '' %>>Admin</option>
              </select>
            </div>
            
            <div class="mb-3">
              <label for="active" class="form-label">Status</label>
              <select class="form-select" id="active" name="active" required>
                <option value="true" <%= editUser.active ? 'selected' : '' %>>Active</option>
                <option value="false" <%= !editUser.active ? 'selected' : '' %>>Inactive</option>
              </select>
            </div>
            
            <button type="submit" class="btn btn-primary">Update User</button>
            <a href="/admin/users" class="btn btn-secondary">Cancel</a>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
