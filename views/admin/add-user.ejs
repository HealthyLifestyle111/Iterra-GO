<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <h1 class="h3 mb-4">Add New User</h1>
      
      <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
        <div class="alert alert-danger">
          <ul class="mb-0">
            <% errors.forEach(error => { %>
              <li><%= error.msg %></li>
            <% }); %>
          </ul>
        </div>
      <% } %>
      
      <div class="card shadow">
        <div class="card-body p-4">
          <form action="/admin/users/add" method="POST">
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="firstName" class="form-label">First Name</label>
                <input type="text" class="form-control" id="firstName" name="firstName" value="<%= typeof formData !== 'undefined' ? formData.firstName : '' %>" required>
              </div>
              
              <div class="col-md-6 mb-3">
                <label for="lastName" class="form-label">Last Name</label>
                <input type="text" class="form-control" id="lastName" name="lastName" value="<%= typeof formData !== 'undefined' ? formData.lastName : '' %>" required>
              </div>
            </div>
            
            <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <input type="text" class="form-control" id="username" name="username" value="<%= typeof formData !== 'undefined' ? formData.username : '' %>" required>
            </div>
            
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control" id="email" name="email" value="<%= typeof formData !== 'undefined' ? formData.email : '' %>" required>
            </div>
            
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" id="password" name="password" required>
            </div>
            
            <div class="mb-3">
              <label for="memberNumber" class="form-label">doTERRA Member Number</label>
              <input type="text" class="form-control" id="memberNumber" name="memberNumber" value="<%= typeof formData !== 'undefined' ? formData.memberNumber : '' %>">
            </div>
            
            <div class="mb-3">
              <label for="doterraSiteUrl" class="form-label">doTERRA Site URL</label>
              <input type="url" class="form-control" id="doterraSiteUrl" name="doterraSiteUrl" value="<%= typeof formData !== 'undefined' ? formData.doterraSiteUrl : '' %>">
            </div>
            
            <div class="mb-3">
              <label for="role" class="form-label">Role</label>
              <select class="form-select" id="role" name="role" required>
                <option value="associate" <%= typeof formData !== 'undefined' && formData.role === 'associate' ? 'selected' : '' %>>Associate</option>
                <option value="admin" <%= typeof formData !== 'undefined' && formData.role === 'admin' ? 'selected' : '' %>>Admin</option>
              </select>
            </div>
            
            <button type="submit" class="btn btn-primary">Create User</button>
            <a href="/admin/users" class="btn btn-secondary">Cancel</a>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
